                  <ul>
                      <li><%= link_to 'Sua Lista', home_path %></li>
                      <li><%= link_to 'Amigos', friends_path %></li>
                      <li><%= link_to 'Blocos', blocos_path %></li>
                      <li><%= link_to 'About', maps_path %></li>
                  </ul>
                </div><!-- /navbar -->
            </div>
        </div><!-- /page -->
