<div data-role="content">
    <ul data-role="listview" data-theme="g" data-filter="true">
      <% yesterday = Date.yesterday; @blocos.each do |bloco| %>
          <% if bloco.date > yesterday %>
            <li data-role="list-divider"><%= bloco.date.strftime("%a - %d de %B de %Y") %></li>
          <% yesterday = bloco.date; end %>
			<li>
               <a href="/bloco/<%= bloco.id %>">
                    <img src="<%= bloco.photo_url %>" />
					<h3><%= bloco.name %></h3>
					<p><%= bloco.neighbor %></p>
					<p class="ui-li-aside"><strong><%= bloco.hour %></strong></p>
               </a>
            </li>
      <% end %>
    </ul>
</div><!-- /content -->